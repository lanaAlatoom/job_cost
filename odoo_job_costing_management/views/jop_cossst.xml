<?xml version="1.0"?>
<odoo>
      <record id="material_purchase_jopst_form" model="ir.ui.view">
               <field name="name">view.material_purchase_requisition.tags.inherit.form</field>
               <field name="model">material.purchase.requisition</field>
               <field name="inherit_id" ref="material_purchase_requisitions.material_purchase_requisition_form_view"/>
               <field name="arch" type="xml">
            <xpath expr="//field[@name='date_end']" position="after">
                <field name="jop_costing_id" readonly="1"/>
            </xpath>

            </field>
    </record>

     <record id="material_purchase_jo_form" model="ir.ui.view">
               <field name="name">view.material_purchase_requisition_line.tags.inherit.form</field>
               <field name="model">material.purchase.requisition</field>
               <field name="inherit_id" ref="material_purchase_requisitions.material_purchase_requisition_form_view"/>
               <field name="arch" type="xml">
            <xpath expr="//field[@name='requisition_type']" position="after">
                <field name="jop_cost_id" invisible="1"/>
            </xpath>

            </field>
     </record>



     <record id="material_purchase_jop_form" model="ir.ui.view">
               <field name="name">view.material_purchase_requisition_line.tags.inherit.form</field>
               <field name="model">material.purchase.requisition</field>
               <field name="inherit_id" ref="material_purchase_requisitions.material_purchase_requisition_form_view"/>
               <field name="arch" type="xml">
            <xpath expr="//field[@name='jop_cost_id']" position="after">
                <field name="product_cost_id"/>
            </xpath>

            </field>
     </record>




     <record id="material_purchase_jopsn_form" model="ir.ui.view">
               <field name="name">view.material_purchase_requisition_line.tags.inherit.form</field>
               <field name="model">material.purchase.requisition</field>
               <field name="inherit_id" ref="material_purchase_requisitions.material_purchase_requisition_form_view"/>
               <field name="arch" type="xml">
            <xpath expr="//field[@name='qty']" position="after">
                <field name="palnd"/>
            </xpath>

            </field>
     </record>


